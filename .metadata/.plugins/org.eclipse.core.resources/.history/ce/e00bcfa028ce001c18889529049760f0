package com.customer.service.feignclients;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;

import com.customer.service.feign.Credit;

import reactor.core.publisher.Mono;

@FeignClient(name = "credit-service", url = "http://localhost:8003")
@RequestMapping("/credit")
public interface CreditFeignClient {

	@PostMapping()
	public Mono<Credit> save(@RequestBody Credit credit);

	@GetMapping("/account/{nroDocument}")
	public Mono<Credit> getCreditByNroDocument(@PathVariable("nroDocument") int nroDocument);
}
